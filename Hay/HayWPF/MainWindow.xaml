<Window x:Class="HayWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HayWPF"
        mc:Ignorable="d"
        Title="Hay" Height="350" Width="525">
    <Grid>
        <TextBox Name="text" Height="25" Margin="10,10,50,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Go" Height="25" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="29" BorderBrush="#FFD1D1D1" Background="#FFE0E0E0" Click="Button_Click"/>
        <local:HayView x:Name="hayview" Margin="0,40,0,0"/>
    </Grid>
</Window>
